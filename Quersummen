import java.util.Scanner;

public class Quersumme {

	public static void main(String[] args) {
		Scanner ein = new Scanner(System.in);
		System.out.println("Von welcher Zahl soll die Quersumme berechnet werden?");
		int zahl = ein.nextInt();
		int zahld = zahl;
		boolean zweite = true;
		boolean apfel = true;
		boolean vierte = true;
		for (int io = 0; zweite; io++) {
		boolean dritte = true;
		int zahlz = zahl;
		int l채nge = 1;
		double zahlv = zahl;
		while(zahlv/10 > 1) {
            l채nge++;
            zahlv = zahlv/10;
        }
		int quersumme = 0, u = 0, i= 1, teiler = 1;
		for (i = 1; i < l채nge; i++) {
			teiler = teiler * 10;
		}
		int j;
		for (j = 0; teiler >= 1; j++) {
			int quersu = zahlz / teiler;
			zahlz = zahl%teiler;
			teiler = teiler / 10;
			int[] summand = new int[l채nge];
			summand[j] = quersu;
			for (int zwe = 0; u<=j; u++) {
				quersumme = quersumme + summand[j];
			}	
	}
		if (quersumme < 10 && vierte) {
			System.out.println("Die Quersumme von " + zahl + " ist " + quersumme + ".");
		zweite = false;
		apfel = false;
		dritte = false;
		vierte = false;
		}
		else if (vierte){
			System.out.println("Die Quersumme von " + zahl + " ist " + quersumme + ".");
			zahl = quersumme;
			dritte = false;
			vierte = false;
		}
		if (dritte) {
				System.out.println("Die zweite Quersumme von " + zahld + " ist " + quersumme + ".");
				zweite = false;
				apfel = false;
				dritte = false;
				vierte = false;
			}
		}
	}
}
